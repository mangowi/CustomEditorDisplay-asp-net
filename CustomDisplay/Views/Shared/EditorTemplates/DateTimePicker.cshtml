@model DateTime

@{

    var id = "dateTimePicker" + ViewData["id"];


}

<div id="@id" class="input-group date" style="max-width: 280px;">
    <input class="form-control text-box single-line" style="max-width: 100%;" value="@Model" />
    <span class="input-group-addon">
            <span class="glyphicon glyphicon-calendar"></span>
        </span>
</div>

<script type="text/javascript">
    $(function() {
        $('#@id')
            .datetimepicker({
                    format: 'L'
            });
    });


</script>